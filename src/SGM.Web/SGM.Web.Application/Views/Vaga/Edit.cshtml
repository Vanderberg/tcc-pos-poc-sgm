@model SGM.Web.Application.Models.Vaga

@{
    ViewData["Title"] = "Módulo Gestão";
    ViewData["Subtitle"] = "Vaga - Editar";
}

<h2>@ViewData["Title"]</h2>
<h4>@ViewData["subtitle"]</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label-bold"></label>
                <input asp-for="Descricao" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="DataInicio" class="control-label-bold"></label>
                <input asp-for="DataInicio" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="DataFim" class="control-label-bold"></label>
                <input asp-for="DataFim" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label-bold"></label>
                <input asp-for="Status" class="form-control" />
            </div>                
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Voltar para Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}