@model SGM.Shared.Domain.Entities.UserEntity;
@{
    ViewData["Title"] = "Home Page";
}

<div style="padding-top:50px;">
    @if (User.Identity.IsAuthenticated)
    {
        <div class="row">
            <div class="col-11 col-sm-8 col-md-6">
                <div style="">
                    <h1>Bem-Vindo</h1>
                    <h3>SCA - Sistema de Controle Ambiental</h3>
                </div>
            </div>
        </div>
    } else
    {
        <div class="row justify-content-center">
            <div class="col-11 col-sm-8 col-md-6">
                <div>
                    @using (Html.BeginForm("LoginUser", "Home", FormMethod.Post, new { role = "form" }))
                    {
                        <div>
                            @Html.AntiForgeryToken()
                            <div>
                                <label>E-mail</label><br />
                            </div>
                            <div>
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control txtbox" })
                            </div>
                            <div style="padding-top:20px;"></div>
                            <div>
                                <label>Nome</label><br />
                            </div>
                            <div>
                                @Html.PasswordFor(m => m.FirstName, new { @class = "form-control txtbox" })
                            </div>
                        </div>
                        <div>
                            <div style="padding-top:20px;">
                                <input class="btn btn-primary btn-lg rph-login-button" type="submit" value="Login" />
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-11 col-sm-8 col-md-6">
                <div style="padding-top:20px;">
                    <div style="padding-top:10px;">
                        <ui style="list-style: none;">
                            <li>admin@bomdestino.gov.br - Alberto - Roberto</li>
                            <li>monitor@company.com  - MONITOR - monitor</li>
                            <li>user@company.com  - USER_COMMON - user</li>
                            <li>manutencao@company.com  - MAINTENANCE - manutencao</li>
                        </ui>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
